<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

      <service id="Svc\LogBundle\Service\EventLog" class="Svc\LogBundle\Service\EventLog" public="true" autowire="true" autoconfigure="true" >
        <tag name="controller.service_arguments"/>
      </service>

      <service id="Svc\LogBundle\Service\LogStatistics" class="Svc\LogBundle\Service\LogStatistics" public="true" autowire="true" autoconfigure="true" >
        <tag name="controller.service_arguments"/>
      </service>

      <service id="Svc\LogBundle\Service\StatsHelper" class="Svc\LogBundle\Service\StatsHelper" public="true" autowire="true" autoconfigure="true" >
        <tag name="controller.service_arguments"/>
      </service>

      <service id="Svc\LogBundle\Command\BatchFillLocationCommand" class="Svc\LogBundle\Command\BatchFillLocationCommand" public="true" autowire="true" autoconfigure="false" >
        <tag name="console.command" />
      </service>

      <service id="Svc\LogBundle\Command\StatMonthlyCommand" class="Svc\LogBundle\Command\StatMonthlyCommand" public="true" autowire="true" autoconfigure="false" >
        <tag name="console.command" />
      </service>

      <service id="Svc\LogBundle\Repository\SvcLogRepository" class="Svc\LogBundle\Repository\SvcLogRepository" public="false" autowire="true" autoconfigure="true" >
        <tag name="doctrine.repository_service"/>
      </service>

      <service id="Svc\LogBundle\Repository\SvcLogStatMonthlyRepository" class="Svc\LogBundle\Repository\SvcLogStatMonthlyRepository" public="false" autowire="true" autoconfigure="true" >
        <tag name="doctrine.repository_service"/>
      </service>

      <service id="svc_log.controller.logviewer" class="Svc\LogBundle\Controller\LogViewerController" public="true" autowire="true" >
        <call method="setContainer">
            <argument type="service" id="Psr\Container\ContainerInterface"/>
        </call>
        <tag name="container.service_subscriber"/>
        <tag name="controller.service_arguments"/>
      </service>

    </services>
</container>