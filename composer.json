{
    "name": "svc/log-bundle",
    "description": "Bundle to log events and statistics in a database table",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Sven Vetter",
            "email": "dev@svenvetter.com"
        }
    ],
    "keywords": [
        "symfony-ux"
    ],
    "require": {
        "php": "^7.3.0 | ^8.0.0",
        "doctrine/annotations": "^1.11",
        "doctrine/doctrine-bundle": "^2.2",
        "doctrine/orm": "^2.8",
        "symfony/framework-bundle": "^5.3",
        "symfony/validator": "^5",
        "symfony/http-kernel": "^5",
        "symfony/options-resolver": "^5",
        "symfony/translation": "^5",
        "symfony/twig-bundle": "^5",
        "twig/intl-extra": "^2.12|^3.0",
        "donatj/phpuseragentparser": "^1.4",
        "svc/util-bundle": "^2|dev-main",
        "svc/param-bundle": "^1|dev-main"
    },
    "suggest": {
        "symfony/security-bundle": "if you want to store information about the logged in user in the logs"
    },
    "autoload": {
        "psr-4": {
            "Svc\\LogBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Svc\\LogBundle\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^5",
        "symfony/browser-kit": "^5",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-doctrine": "^1.2"
    },
    "scripts": {
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse src/ --level 5 -c .phpstan.neon"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
