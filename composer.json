{
    "name": "svc/log-bundle",
    "description": "Bundle to log events and statistics in a database table",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Sven Vetter",
            "email": "git.09o@svenvetter.com"
        }
    ],
    "keywords": [
        "symfony-ux"
    ],
    "require": {
        "php": "^8.1",
        "doctrine/doctrine-bundle": "^2.10",
        "symfony/framework-bundle": "^6.3|^7",
        "symfony/validator": "^6.3|^7",
        "symfony/http-kernel": "^6.3|^7",
        "symfony/lock": "^6.3|^7",
        "symfony/options-resolver": "^6.3|^7",
        "symfony/security-bundle": "^6.3|^7",
        "symfony/translation": "^6.3|^7",
        "symfony/twig-bundle": "^6.3|^7",
        "twig/intl-extra": "^3.3",
        "donatj/phpuseragentparser": "^1.6",
        "svc/util-bundle": "^5.4|dev-main",
        "svc/param-bundle": "^6.2|dev-main",
        "doctrine/orm": "^2.18 | ^3",
        "symfony/ux-twig-component": "^2.18"
    },
    "suggest": {
        "symfony/security-bundle": "if you want to store information about the logged in user in the logs",
        "easycorp/easyadmin-bundle": "If the EasyAdmin log admin page is to be used"
    },
    "autoload": {
        "psr-4": {
            "Svc\\LogBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Svc\\LogBundle\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "symfony/browser-kit": "^6.3|^7",
        "phpstan/phpstan": "^1.10",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpunit/phpunit": "^10.5 || ^11"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox",
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse src/ --level 5 -c .phpstan.neon"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
