{
    "name": "svc/log-bundle",
    "description": "Bundle to log events and statistics in a database table",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Sven Vetter",
            "email": "git.09o@svenvetter.com"
        }
    ],
    "keywords": [
        "symfony-ux"
    ],
    "require": {
        "php": "^8.4",
        "doctrine/doctrine-bundle": "^2.10 | ^3",
        "symfony/framework-bundle": "^7.3 | ^8.0",
        "symfony/validator": "^7.3 | ^8.0",
        "symfony/http-kernel": "^7.3 | ^8.0",
        "symfony/lock": "^7.3 | ^8.0",
        "symfony/options-resolver": "^7.3 | ^8.0",
        "symfony/translation": "^7.3 | ^8.0",
        "symfony/twig-bundle": "^7.3 | ^8.0",
        "twig/intl-extra": "^3.21",
        "svc/util-bundle": "^8.3.0 | dev-main",
        "doctrine/orm": "^2.18 | ^3",
        "symfony/ux-twig-component": "^2.18",
        "symfony/security-bundle": "^7.3 | ^8.0",
        "symfony/stimulus-bundle": "^2.18",
        "twig/extra-bundle": "^3.21",
        "jbtronics/settings-bundle": "^2.6 | ^3",
        "matomo/device-detector": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Svc\\LogBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Svc\\LogBundle\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "symfony/browser-kit": "^7.3 | ^8.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-doctrine": "^2",
        "phpunit/phpunit": "^12.3"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox",
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c .phpstan.neon"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
