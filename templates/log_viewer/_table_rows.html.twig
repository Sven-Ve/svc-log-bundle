<input type="hidden" value="{{ next }}" data-svcl-log-viewer-target="next" >
<input type="hidden" value="{{ last }}" data-svcl-log-viewer-target="last" >
<input type="hidden" value="{{ prev }}" data-svcl-log-viewer-target="prev" >

{% for log in logs %}
	<tr>
		<td>({{ log.id }}) - {{ log.sourceID }}</td>
		<td>{{ log.sourceType }}</td>
		<td>{{ log.logLevelText }}</td>
		<td>{{ log.logDate | format_datetime() }}</td>
		<td>{{ log.message }}</td>
	</tr>
{% else %}
	<tr>
		<td colspan="4">{% trans %}no records found{% endtrans %}</td>
	</tr>
{% endfor %}