{% trans_default_domain 'LogBundle' %}
{% for log in logs | default(null) %}
	<tr 
    data-controller="detail" 
    data-detail-url-value="{{ path('svc_log_viewer_get_detail', {id: log.id}) }}"
    data-action="click->detail#showDetail"
  >
    {% if not hideSourceCols | default(false) %}
      <td>{{ log.sourceIDText }}</td>
      <td>{{ log.sourceTypeText }}</td>
    {% endif %}

		<td>{{ log.logLevelText }}</td>
		<td>{{ log.logDate | format_datetime() }}</td>
		<td>{{ log.country }}</td>
		<td>{{ log.city }}</td>

    {% if hideSourceCols | default(false) %}
      <td>{{ log.platform }}</td>
      <td>{{ log.browser }}</td>
      <td>{{ log.referer }}</td>
    {% endif %}

	</tr>
{% else %}
	<tr>
		<td colspan="4">{{ init | default(false) ? "Loading..." : "no log records found." | trans }}</td>
	</tr>
{% endfor %}
<input type="hidden" value="{{ dataContr.next | default(0) }}" data-svc--log-bundle--view-target="next" >
<input type="hidden" value="{{ dataContr.last | default(0) }}" data-svc--log-bundle--view-target="last" >
<input type="hidden" value="{{ dataContr.prev | default(0) }}" data-svc--log-bundle--view-target="prev" >
<input type="hidden" value="{{ dataContr.hidePrev | default(0) }}" data-svc--log-bundle--view-target="hidePrev" >
<input type="hidden" value="{{ dataContr.hideNext | default(0) }}" data-svc--log-bundle--view-target="hideNext" >
<input type="hidden" value="{{ dataContr.count | default(0) }}" data-svc--log-bundle--view-target="count" >
<input type="hidden" value="{{ dataContr.from | default(0) }}" data-svc--log-bundle--view-target="from" >
<input type="hidden" value="{{ dataContr.to | default(0) }}" data-svc--log-bundle--view-target="to" >