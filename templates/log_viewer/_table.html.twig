<div data-controller="svcl-log-viewer" 
  data-svcl-log-viewer-url-value="{{ path('svc_log_viewer_view_data') }}"
  data-svcl-log-viewer-show-filter-value="{{ showFilter | default(0) }}"
>
  <form data-action="svcl-log-viewer#onSubmit">
    <div class='table-responsive'>
      <table class="table table-hover table-sm">
        <thead>
          {% if showFilter | default(false) %}
            <tr>
              <td>
                <div class="row">
                  <div class="col">
                    {{ include("@SvcLog/log_viewer/_comparison.html.twig", {name: "sourceIDC"}) }}
                  </div>
                  <div class="col">
                    <input type="text" class="form-control form-control-sm" name="sourceID" data-svcl-log-viewer-target="sourceID" placeholder="ID">
                  </div>
                </div>
              </td>
              <td>
                <div class="row">
                  <div class="col">
                    {{ include("@SvcLog/log_viewer/_comparison.html.twig", {name: "sourceTypeC"}) }}
                  </div>
                  <div class="col">
                    <input type="text" class="form-control form-control-sm" name="sourceType" data-svcl-log-viewer-target="sourceType" placeholder="type">
                  </div>
                </div>
              </td>
              <td>
                <div class="row">
                  <div class="col">
                    {{ include("@SvcLog/log_viewer/_comparison.html.twig", {name: "logLevelC"}) }}
                  </div>
                  <div class="col">
                    <select class="form-select form-select-sm" name="logLevel" data-svcl-log-viewer-target="logLevel" data-action="svcl-log-viewer#onSubmit">
                      {% for key, level in levelArray %}
                        <option value="{{ key }}">{{ level }}</option>
                      {% endfor %}
                    </select>
                  </div>
                </div>
              </td>
              <td></td>
              <td>
                <input type="text" class="form-control form-control-sm" name="country" data-svcl-log-viewer-target="country" placeholder="country">
              </td>

              <td>
                <input type='Submit' value='Go'>
              </td>
            </tr>
          {% endif %}
          <tr>
            <th>Source ID</th>
            <th>Source type</th>
            <th>Level</th>
            <th>Date</th>
            <th>Country</th>
            <th>Message</th>
          </tr>
        </thead>
        <tbody data-svcl-log-viewer-target="content">
          {{ include("@SvcLog/log_viewer/_table_rows.html.twig") }}
        </tbody>
      </table>
    </div>
  </form>

  <small>
    {% trans %}Row{% endtrans %} <span data-svcl-log-viewer-target="fromDisplay"></span> 
    {% trans %}to{% endtrans %} <span data-svcl-log-viewer-target="toDisplay"></span>
    {% trans %}from a total of{% endtrans %} <span data-svcl-log-viewer-target="countDisplay"></span>
  </small>
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li class="page-item disabled" data-svcl-log-viewer-target="firstBtn">
        <a class="page-link" title='{% trans %}First{% endtrans %}' data-action="svcl-log-viewer#first">&laquo;</a>
      </li>
      <li class="page-item disabled" data-svcl-log-viewer-target="prevBtn">
        <a class='page-link' title='{% trans %}Previous{% endtrans %}' data-action="svcl-log-viewer#prev">&lsaquo;</a>
      </li>
      <li class="page-item" data-svcl-log-viewer-target="nextBtn">
        <a class='page-link' title='{% trans %}Next{% endtrans %}' data-action="svcl-log-viewer#next">&rsaquo;</a>
      </li>
      <li class="page-item" data-svcl-log-viewer-target="lastBtn">
        <a class='page-link' title='{% trans %}Last{% endtrans %}' data-action="svcl-log-viewer#last">&raquo;</a>
      </li>
    </ul>
  </nav>

</div>
