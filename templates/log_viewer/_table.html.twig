{% trans_default_domain 'LogBundle' %}
<div data-controller="svc--log-bundle--view" 
  data-svc--log-bundle--view-url-value="{{ path('svc_log_viewer_view_data') }}"
  data-svc--log-bundle--view-show-filter-value="{{ showFilter | default(0) }}"
  data-svc--log-bundle--view-default-source-id-value="{{ sourceID | default('') }}"
  data-svc--log-bundle--view-default-source-type-value="{{ sourceType | default('') }}"
  data-svc--log-bundle--view-default-log-level-value="{{ logLevel | default('') }}"
  data-svc--log-bundle--view-hide-source-cols-value="{{ hideSourceCols | default(0) }}"
>
  <form data-action="svc--log-bundle--view#onSubmit">
    <div class='table-responsive'>
      <table class="table table-hover table-sm">
        <thead>
          {% if showFilter | default(false) %}
            <tr>
              <td> </td>
              <td>
                <div class="row">
                  <div class="col">
                    {{ include("@SvcLog/log_viewer/_comparison.html.twig", {name: "sourceIDC"}) }}
                  </div>
                  <div class="col">
                    <input type="text" class="form-control form-control-sm" name="sourceID" value="{{ sourceID | default('') }}" data-svc--log-bundle--view-target="sourceID" placeholder="ID">
                  </div>
                </div>
              </td>
              <td>
                <div class="row">
                  <div class="col">
                    {{ include("@SvcLog/log_viewer/_comparison.html.twig", {name: "sourceTypeC"}) }}
                  </div>
                  <div class="col">
                    <input type="text" class="form-control form-control-sm" name="sourceType" value="{{ sourceType | default('') }}" data-svc--log-bundle--view-target="sourceType" placeholder="type">
                  </div>
                </div>
              </td>
              <td>
                <div class="row">
                  <div class="col">
                    {{ include("@SvcLog/log_viewer/_comparison.html.twig", {name: "logLevelC"}) }}
                  </div>
                  <div class="col">
                    <select class="form-select form-select-sm" name="logLevel" data-svc--log-bundle--view-target="logLevel" data-action="svc--log-bundle--view#onSubmit">
                      {% for key, level in levelArray %}
                        <option value="{{ key }}">{{ level }}</option>
                      {% endfor %}
                    </select>
                  </div>
                </div>
              </td>
              <td></td>
              <td>
                <input type="text" class="form-control form-control-sm" name="country" data-svc--log-bundle--view-target="country" placeholder="country">
              </td>
              <td>
                <input type='Submit' value='Go'>
              </td>
            </tr>
          {% endif %}

          <tr>
            <th scope="col"> </th>
            {% if not hideSourceCols | default(false) %}
              <th scope="col">Source ID</th>
              <th scope="col">Source type</th>
            {% endif %}
            <th scope="col">{% trans %}Level{% endtrans %}</th>
            <th scope="col">{% trans %}Date{% endtrans %}</th>
            <th scope="col">{% trans %}Country{% endtrans %}</th>
            <th scope="col">{% trans %}City{% endtrans %}</th>
            {% if hideSourceCols | default(false) %}
              <th scope="col">{% trans %}Platform{% endtrans %}</th>
              <th scope="col">{% trans %}Browser{% endtrans %}</th>
              <th scope="col">{% trans %}Referer{% endtrans %}</th>
            {% endif %}
          </tr>
        </thead>
        <tbody data-svc--log-bundle--view-target="content">
          {{ include("@SvcLog/log_viewer/_table_rows.html.twig", {'init': true}) }}
        </tbody>
      </table>
    </div>
  </form>

  <small>
    {% trans %}Row{% endtrans %} <span data-svc--log-bundle--view-target="fromDisplay"></span> 
    {% trans %}to{% endtrans %} <span data-svc--log-bundle--view-target="toDisplay"></span>
    {% trans %}from a total of{% endtrans %} <span data-svc--log-bundle--view-target="countDisplay"></span>
  </small>
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li class="page-item disabled" data-svc--log-bundle--view-target="firstBtn">
        <a class="page-link" title='{% trans %}First{% endtrans %}' data-action="svc--log-bundle--view#first">&laquo;</a>
      </li>
      <li class="page-item disabled" data-svc--log-bundle--view-target="prevBtn">
        <a class='page-link' title='{% trans %}Previous{% endtrans %}' data-action="svc--log-bundle--view#prev">&lsaquo;</a>
      </li>
      <li class="page-item" data-svc--log-bundle--view-target="nextBtn">
        <a class='page-link' title='{% trans %}Next{% endtrans %}' data-action="svc--log-bundle--view#next">&rsaquo;</a>
      </li>
      <li class="page-item" data-svc--log-bundle--view-target="lastBtn">
        <a class='page-link' title='{% trans %}Last{% endtrans %}' data-action="svc--log-bundle--view#last">&raquo;</a>
      </li>
    </ul>
  </nav>

</div>

{{ include("@SvcUtil/elements/_modal.html.twig") }}
