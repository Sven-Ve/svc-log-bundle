<h3>{{ daily_count.title }}</h3>
<div class="table-container">
  <table class="simple-table" style="width: 100%; border-collapse: collapse;">
    <thead>
      <tr>
        <th style="background-color: #667eea; color: #ffffff; font-weight: 600; padding: 10px 8px; text-align: left; font-size: 14px;">Item</th>
        <th style="background-color: #667eea; color: #ffffff; font-weight: 600; padding: 10px 8px; text-align: right; font-size: 14px;">Count</th>
      </tr>
    </thead>
    <tbody>
      {% for line in daily_count.data | default(null) %}
        <tr>
          <td style="padding: 10px 8px; border-bottom: 1px solid #e8e8e8; font-size: 14px;">{{ line.item_title }}</td>
          <td style="padding: 10px 8px; border-bottom: 1px solid #e8e8e8; font-size: 14px; text-align: right;"><strong>{{ line.item_count }}</strong></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>