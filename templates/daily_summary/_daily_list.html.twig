<h3>{{ daily_list.title }}</h3>
<div class="table-container">
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Source ID</th>
        <th>Source type</th>
        <th>Log level</th>
        <th>Bot</th>
        <th>Message</th>
      </tr>
    </thead>
    <tbody>
      {% for log in daily_list.logItems | default(null) %}
        <tr>
          <td>{{ log.id }}</td>
          <td>{{ log.logDate | format_datetime(locale='de',timezone='Europe/Zurich') }}</td>
          <td>{{ log.getSourceIDText }}</td>
          <td>{{ log.getSourceTypeText }}</td>
          <td class="log-level-cell" style="background-color:{{ log.getLogLevelBGColorHTML }}; color:{{log.getLogLevelFGColorHTML}}">
            {{ log.getLogLevelText }}
          </td>
          <td>{{ log.botName ?: '-' }}</td>
          <td>{{ log.message }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>